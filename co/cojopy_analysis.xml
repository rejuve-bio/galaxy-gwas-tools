<tool id="cojo_cojopy" name="COJO with cojopy" version="0.1">
    <description>Conditional and joint association analysis using cojopy</description>

    <requirements>
        <!-- <requirement type="package">python</requirement> -->
        <requirement type="package">cojopy</requirement>
    </requirements>

    <command><![CDATA[
python $__tool_directory__/run_cojopy.py \
    $gwas $bed $bim $fam $output
    ]]></command>

    <inputs>
        <param name="gwas" type="data" format="tabular, tsv" label="GWAS summary statistics"/>
        <param name="bed" type="data" format="binary" label="PLINK BED file"/>
        <param name="bim" type="data" format="tabular" label="PLINK BIM file"/>
        <param name="fam" type="data" format="tabular" label="PLINK FAM file"/>
    </inputs>

    <outputs>
        <data name="output" format="tabular" label="COJO Output"/>
    </outputs>

    <stdio>
        <exit_code range="1:" level="fatal" description="COJO analysis failed." />
    </stdio>
</tool>
