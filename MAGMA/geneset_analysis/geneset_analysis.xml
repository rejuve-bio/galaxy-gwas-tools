<tool id="magma_geneset" name="MAGMA: Gene-set Analysis" version="1.0">
    <command>
        python3 $__tool_directory__/geneset_analysis.py
        --gene_results $gene_results
        --geneset $geneset
        --out output
    </command>

    <inputs>
        <param name="gene_results" type="data" format="txt" label="Gene results file"/>
        <param name="geneset" type="data" format="gmt" label="Gene set (GMT) file"/>
    </inputs>

    <outputs>
        <data name="gsa_out" format="txt" from_work_dir="output.gsa.out"/>
    </outputs>
</tool>
